<h1> Create a post </h1>

<%= form_for @post do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title %>

  <br> <br>
  
  <%= f.label :content %>
  <%= f.text_area :content %>

  <h3>Select a category</h3>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
    <p>
    <%= b.label %>
    <%= b.check_box %>
    </p>
  <% end %>
  
  <input type="text" name="post[categories_attributes][0][name]" id="post_categories_attributes_0_name">

  <h3>Create a category for your post</h3>
  <%= f.fields_for :categories do |categories_field| %>
    <%= categories_field.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
