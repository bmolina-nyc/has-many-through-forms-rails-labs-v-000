<h1> Create a post </h1>

<%= form_for @post do |f| %>
  <%= f.label :Title %>
  <%= f.text_field :title %>

  <br> <br>
  
  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
  
  <%= f.fields_for :categories do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>
